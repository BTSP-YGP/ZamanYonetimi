<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Matrix.MatrixFragment">

    <ListView
        android:id="@+id/listview_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/text_yataySol"
        app:layout_constraintEnd_toStartOf="@+id/text_dikeyUst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listview_yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFF00"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/text_yataySag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_dikeyUst"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listview_green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#008000"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_dikeyAlt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_yataySol" />

    <ListView
        android:id="@+id/listview_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0000FF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_dikeyAlt"
        app:layout_constraintTop_toBottomOf="@+id/text_yataySag" />


    <TextView
        android:id="@+id/text_yataySol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Önemli"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_yataySag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_yataySag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Değil"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_yataySol"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dikeyUst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:text="Acil"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_yataySag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dikeyAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:text="Değil"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_yataySag" />


</androidx.constraintlayout.widget.ConstraintLayout>